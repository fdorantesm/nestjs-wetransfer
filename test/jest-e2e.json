{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/utility/(.*)": "<rootDir>/../libs/utility/src/$1",
    "@app/utility": "<rootDir>/../libs/utility/src"
  }
}